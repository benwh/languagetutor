<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

		<!-- HEADER CONTENT AREA -->
		
	<LinearLayout style="@style/header_content_layout" >

		<TextView
			style="@style/header_text"
			android:text="@string/topic_selec" />
	</LinearLayout>
	
	<!-- MAIN CONTENT AREA -->
	

	<!-- As essential layout for each difficulty levels topic selection will be the same, used for all 3 -->

	<LinearLayout style="@style/main_content_layout" >

		<!-- LIST OF TOPICS -->

		<ListView
			android:id="@+id/android:list"
			style="@style/tut_topic_text"
			android:layout_weight="0.9" />
		<!-- SELECT MIXED TEST -->

		<Button
			android:id="@+id/mixtest"
			style="@style/menu_btn"
			android:layout_weight="0.1"
			android:text="@string/mixed_topics" />
	</LinearLayout>

</LinearLayout>