<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:text="Username:" />
	<EditText
	    android:id="@+id/create_username"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:text="Password:" />
	<EditText android:id="@+id/create_password" 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:text="Confirm password:" />
	<EditText android:id="@+id/confirm_password" 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:text="Secret question:" />
	<EditText android:id="@+id/create_sq" 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:text="Secret answer:" />
	<EditText android:id="@+id/create_sa" 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
	
	<Button
	    android:id="@+id/create_profile_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="20dp"
	    android:layout_weight="0"
	    android:text="Create profile" />

</LinearLayout>