<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout style="@style/header_content_layout" >

		<TextView
			style="@style/title_header_text"
			android:text="@string/test" />
	</LinearLayout>

	<LinearLayout style="@style/main_content_layout" >

		<TextView
			android:id="@+id/written_question_head"
			style="@style/header_text"
			android:text="@string/written_question" />

		<TextView
			android:id="@+id/written_question"
			style="@style/question_text" />

		<EditText
			android:id="@+id/written_answer"
			style="@style/middle_editbox"
			android:inputType="text" />

		<Button
			android:id="@+id/submit_answer"
			style="@style/normal_btn"
			android:text="@string/submit_answer" />
	</LinearLayout>

</LinearLayout>