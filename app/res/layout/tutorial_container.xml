<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:weightSum="1.0" >

	<LinearLayout style="@style/header_content_layout" >

		<TextView
			android:id="@+id/tutorial_header"
			style="@style/title_header_text"
			android:text="@string/placeholder_tutorial_header" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/tutpager_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<android.support.v4.view.ViewPager
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/tutpager"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
	</LinearLayout>

</LinearLayout>