<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/spanish_background_back"
	android:orientation="vertical"
	android:weightSum="1.0" >

	<LinearLayout
		android:id="@+id/headerLayout"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.15"
		android:background="@drawable/spanish_background_top"
		android:orientation="vertical" >

		<!-- android:layout_height="90dp" -->
		<!-- android:layout_height="90dp" -->

		<TextView
			android:id="@+id/tutorial_header"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/placeholder_tutorial_header" />
		<!-- style="@style/title_text" -->

	</LinearLayout>

	<LinearLayout
		android:id="@+id/tutpager_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0.85"
		android:orientation="vertical" >

		<android.support.v4.view.ViewPager
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/tutpager"
			android:layout_width="match_parent"
			android:layout_height="0dp" />
	</LinearLayout>

</LinearLayout>