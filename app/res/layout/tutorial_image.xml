<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<!-- ENGLISH WORD -->

	<TextView
		android:id="@+id/tutorial_srctext"
		style="@style/tutorial_text_src"
		android:layout_weight="0.33"
		android:text="@string/placeholder_src" />

	<!-- IMAGE -->

	<ImageView
		android:id="@+id/tutorial_imageview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="0.33"
		android:contentDescription="@string/tutimg_desc"
		android:src="@drawable/broken_icon" />

	<!-- SPANISH WORD -->

	<TextView
		android:id="@+id/tutorial_dsttext"
		style="@style/tutorial_text_dst"
		android:layout_weight="0.33"
		android:text="@string/placeholder_dst" />

</LinearLayout>