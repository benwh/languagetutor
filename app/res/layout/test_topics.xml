    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/title_text"
        android:text="@string/topic_selec" />

    <LinearLayout style="@style/main_content" >

        <!-- As essential layout for each difficulty levels topic selection will be the same, used for all 3 -->

        <ListView
