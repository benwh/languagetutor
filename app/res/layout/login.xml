<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<!-- HEADER CONTENT AREA -->

	<LinearLayout style="@style/header_content_layout" >

		<TextView
			style="@style/header_text"
			android:text="@string/login" />
	</LinearLayout>

	<!-- MAIN CONTENT AREA -->

	<ScrollView style="@style/scrollview_layout" >

		<LinearLayout style="@style/main_content_layout" >

			<!-- Username -->

			<TextView
				style="@style/lable_text"
				android:text="@string/username" />

			<EditText
				android:id="@+id/input_username"
				style="@style/fwidth_editbox"
				android:inputType="text" />

			<!-- Password -->

			<TextView
				style="@style/lable_text"
				android:text="@string/password" />

			<EditText
				android:id="@+id/input_password"
				style="@style/fwidth_editbox"
				android:inputType="textPassword" />

			<!-- Login Button -->

			<Button
				android:id="@+id/login_button"
				style="@style/normal_btn"
				android:text="@string/login" />
		</LinearLayout>
	</ScrollView>

</LinearLayout>