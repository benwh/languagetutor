<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<TextView
		android:id="@+id/main_header_text"
		style="@style/title_text"
		android:paddingBottom="10dp"
		android:textSize="35sp" />

	<LinearLayout style="@style/main_content" >

		<Button
			android:id="@+id/tutorialsbutton"
			style="@style/menu_btn"
			android:text="@string/tutorials" />

		<Button
			android:id="@+id/revisionbutton"
			style="@style/menu_btn"
			android:text="@string/revision" />

		<Button
			android:id="@+id/gamesbutton"
			style="@style/menu_btn"
			android:text="@string/games" />

		<Button
			android:id="@+id/testsbutton"
			style="@style/menu_btn"
			android:text="@string/tests" />

		<Button
			android:id="@+id/statsbutton"
			style="@style/menu_btn"
			android:text="@string/statistics" />

		<Button
			android:id="@+id/optionsbutton"
			style="@style/menu_btn"
			android:text="@string/prof_optns" />
	</LinearLayout>

</LinearLayout>