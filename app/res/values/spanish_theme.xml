<resources>

<!-- Style that is applied across the whole application -->
    <style name="page_standard" parent="android:Theme.Black">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/spanish_background</item>
        <item name="android:buttonStyle">@style/normal_btn</item>
        <item name="android:editTextStyle">@style/red_edittext</item>
    </style>

<!-- TITLE TEXT -->
    <style name="title_text" parent="android:Theme.Black">
        <!-- FONT -->
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <!-- LAYOUT -->
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

<!-- HEADER TEXT -->
    <style name="header_text" parent="android:Theme.Black">
        <!-- FONT -->
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <!-- LAYOUT -->
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    
<!-- QUESTION TEXT -->
    <style name="question_text" parent="android:Theme.Black">
        <!-- FONT -->
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <!-- LAYOUT -->
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>


<!-- STANDARD BUTTON -->
    <style name="normal_btn">
        <item name="android:background">@drawable/yellow_button</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_gravity">center</item>
    </style>

<!-- MENU BUTTON -->
    <style name="menu_btn">
        <item name="android:background">@drawable/yellow_button</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_gravity">center</item>
    </style>

<!-- INPUT TEXT -->
    <style name="red_edittext" parent="@android:style/Widget.EditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/edit_text_box</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:textColorHighlight">#000000</item>
    </style>

<!-- INPUT TEXT BOX ACROSS WHOLE WIDTH 1 LINE TALL -->
    <style name="fwidth_editbox">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
<!-- INPUT TEXT BOX ACROSS WHOLE WIDTH 1 LINE TALL -->
    <style name="middle_editbox">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

<!-- MAIN CONTENT AREA PROPERTIES-->
    <style name="main_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
<!-- PARAGRAPH TEXT -->

</resources>