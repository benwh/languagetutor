<resources>

	<!-- Style that is applied across the whole application -->
	<style name="page_standard" parent="android:Theme.Black">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@drawable/spanish_background_back</item>
		<item name="android:editTextStyle">@style/red_edittext</item>
	</style>

	<!-- HEADER TEXT -->
	<style name="header_text" parent="android:Theme.Black">

		<!-- FONT -->
		<item name="android:textSize">40sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<!-- LAYOUT -->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- LABLE TEXT -->
	<style name="lable_text" parent="android:Theme.Black">

		<!-- FONT -->
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textStyle">bold</item>
		<!-- LAYOUT -->
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
	</style>

	<!-- SMALL TEXT - BELOW LABELS -->
	<style name="small_text" parent="android:Theme.Black">

		<!-- FONT -->
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<!-- LAYOUT -->
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
	</style>

	<!-- CENTERED TEXT -->
	<style name="center_text" parent="android:Theme.Black">

		<!-- FONT -->
		<item name="android:textSize">25sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<!-- LAYOUT -->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- TUTORIAL TEXT -->
	<!-- TUTORIAL TEXT SRC -->
	<style name="tutorial_text_src">

		<!-- FONT -->
		<item name="android:textSize">30sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textStyle">bold</item>
		<!-- LAYOUT -->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- TUTORIAL TEXT DST -->
	<style name="tutorial_text_dst">

		<!-- FONT -->
		<item name="android:textSize">25sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<!-- LAYOUT -->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- TOPIC TEXT -->
	<!-- TUTORIAL TOPIC TEXT -->

	<style name="tut_topic_text">

		<!-- FONT -->
		<item name="android:textSize">35sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<!-- LAYOUT -->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">left</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<!-- DIVIDER -->
		<item name="android:divider">#FFFF00</item>
		<item name="android:dividerHeight">2dp</item>
		<item name="android:headerDividersEnabled">true</item>
		<item name="android:footerDividersEnabled">true</item>
	</style>

	<!-- TEST TOPIC TEXT -->
	<style name="test_topic_text">

		<!-- FONT -->
		<item name="android:textSize">30sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<!-- LAYOUT -->
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">left</item>
		<item name="android:layout_marginRight">10dp</item>
	</style>

	<!-- TEST TOPIC PERCENTAGES -->
	<style name="test_topic_percent">

		<!-- FONT -->
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<!-- LAYOUT -->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:gravity">right|center_vertical</item>
	</style>

	<!-- LEFT + RIGHT ALIGHN -->
	<style name="seperate">

		<!-- LAYOUT -->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<!-- DIVIDER -->
		<item name="android:divider">#FFFF00</item>
		<item name="android:dividerHeight">2dp</item>
		<item name="android:headerDividersEnabled">true</item>
		<item name="android:footerDividersEnabled">true</item>
	</style>

	<!-- MENU BUTTON -->
	<style name="menu_btn">
		<item name="android:background">@drawable/yellow_button</item>
		<item name="android:layout_width">280dp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:layout_margin">8dp</item>
		<item name="android:textSize">25sp</item>
		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<!-- NORMAL BUTTON -->
	<style name="normal_btn">
		<item name="android:background">@drawable/yellow_button</item>
		<item name="android:layout_width">150dp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_margin">3dp</item>
		<item name="android:textSize">15sp</item>
		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<!-- YES/NO BUTTON -->
	<style name="y_n_btn">
		<item name="android:background">@drawable/yellow_button</item>
		<item name="android:layout_width">140dp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_margin">10dp</item>
		<item name="android:textSize">25sp</item>
		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<!-- HEADER LAYOUT -->
	<style name="header_content_layout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">80dp</item>
		<item name="android:background">@drawable/spanish_background_top</item>
		<item name="android:orientation">vertical</item>
	</style>

	<!-- MAIN CONTENT LAYOUT -->
	<style name="main_content_layout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_marginTop">10dp</item>
	</style>
	<!-- SCROLLVIEW LAYOUT -->
	<style name="scrollview_layout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">vertical</item>
	</style>

	<!-- EDIT TEXT BOXES -->
	<!-- INPUT TEXT (USED AS BASE PROPERTIES FOR OTHER TWO) -->
	<style name="red_edittext" parent="@android:style/Widget.EditText">
		<item name="android:textColor">#000000</item>
		<item name="android:focusable">true</item>
		<item name="android:focusableInTouchMode">true</item>
		<item name="android:clickable">true</item>
		<item name="android:background">@drawable/edit_text_box</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<!-- INPUT TEXT BOX ACROSS WHOLE WIDTH 1 LINE TALL -->
	<style name="fwidth_editbox" parent="@style/red_edittext">
		<item name="android:layout_width">280dp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<!-- TEST2 INPUT BOX -->
	<style name="middle_editbox" parent="@style/red_edittext">
		<item name="android:layout_width">180dp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_marginTop">20dp</item>
	</style>

	<!-- RATING BAR -->
	<style name="rate_bar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:maxHeight">1dp</item>
		<item name="android:numStars">6</item>
		<item name="android:stepSize">1</item>
	</style>

	<!-- TEST RESULTS GRID -->
	<style name="test_results_grid">

		<!-- FONT -->
		<item name="android:textSize">25sp</item>
		<item name="android:textColor">#FFFFFF</item>

		<!-- LAYOUT -->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
		<item name="android:horizontalSpacing">10dp</item>
		<item name="android:verticalSpacing">10dp</item>
		<item name="android:numColumns">3</item>
		<item name="android:columnWidth">90dp</item>
		<item name="android:stretchMode">columnWidth</item>
	</style>

</resources>